@model ASDF.ENETCare.InterventionManagement.Web.Models.ClientListsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateClient") <br/><br/>
    @Html.ActionLink("View All Created Interventions", "ViewAllInterventions")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>      
        <th></th>
    </tr>

@foreach (var item in Model.Clients) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditDetails", new { id=item.ClientId }) |
            @Html.ActionLink("Details", "ViewDetails", new { id=item.ClientId }) 
           
        </td>
    </tr>
}

</table>
