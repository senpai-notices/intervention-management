@using Microsoft.Ajax.Utilities
@model ASDF.ENETCare.InterventionManagement.Web.Models.ClientDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4>Client Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)

        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            <p>@Html.DisplayNameFor(model => model.ClientInterventions)</p>
            <p>
                @Html.ActionLink("Create New", "Create", "Intervention", new { id = Model.Id }, new { @class = "btn btn-default" })
            </p>
        </dt>

        @if (Model.ClientInterventions.Any())
        {
            <dd>
                <table class="table">
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                    @foreach (var i in Model.ClientInterventions)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => i.DatePerformed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.InterventionTemplate.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.InterventionState.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", "Intervention", new { id = i.InterventionId }, null) |
                                @Html.ActionLink("Edit", "Edit", "Intervention", new { id = i.InterventionId }, null)

                            </td>
                        </tr>
                    }
                </table>
            </dd>
        }
        else
        {
            <dd>This client does not have any interventions.</dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("View Interventions", "ViewInterventions", new { id = Model.Id }, new { @class = "btn btn-default" })

    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
